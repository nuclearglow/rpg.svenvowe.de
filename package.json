{
  "name": "rpg.svenvowe.de",
  "version": "1.0.3",
  "private": true,
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "postbuild": "cp package.json build/",
    "release": "standard-version --no-verify",
    "preview": "vite preview",
    "test": "npm run test:integration && npm run test:unit",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "prettier --plugin-search-dir . --check . && eslint .",
    "format": "prettier --plugin-search-dir . --write .",
    "test:integration": "playwright test",
    "test:unit": "vitest",
    "deploy:remote": "./scripts/deploy.sh",
    "deploy": "run-s build deploy:remote"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.7.2",
    "@commitlint/config-conventional": "^17.7.0",
    "@playwright/test": "^1.28.1",
    "@sveltejs/adapter-auto": "^2.0.0",
    "@sveltejs/adapter-node": "^1.0.0-next.106",
    "@sveltejs/kit": "^1.20.4",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.28.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-svelte": "^2.30.0",
    "husky": "^8.0.3",
    "less": "^4.2.0",
    "lint-staged": "^14.0.1",
    "mdsvex": "^0.11.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.0",
    "prettier-plugin-svelte": "^2.10.1",
    "sass": "^1.68.0",
    "standard-version": "^9.5.0",
    "svelte": "^4.0.5",
    "svelte-check": "^3.4.3",
    "tslib": "^2.4.1",
    "typescript": "^5.0.0",
    "vite": "^4.4.2",
    "vitest": "^0.32.2"
  },
  "type": "module",
  "dependencies": {
    "@fontsource/courgette": "^5.0.14",
    "@fontsource/oxygen-mono": "^5.0.14",
    "lucide-svelte": "^0.284.0",
    "open-props": "^1.6.4",
    "prettier-plugin-jsdoc": "^0.4.2",
    "shiki": "^0.14.4",
    "svelte-zoom": "^1.0.16"
  }
}
